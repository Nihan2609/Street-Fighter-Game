<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Client.LoginUIController"
            prefHeight="400" prefWidth="600">

    <!-- Background Image -->
    <ImageView fx:id="bgImage" fitHeight="400" fitWidth="600" preserveRatio="false"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <image>
            <Image url="@../../../images/LogInBG.jpg" />
        </image>
        <effect>
            <ColorAdjust brightness="-0.2" />
        </effect>
    </ImageView>

    <!-- Username Field -->
    <TextField fx:id="usernameField" layoutX="200" layoutY="180" prefWidth="200" prefHeight="35"
               promptText="Username"
               style="-fx-background-radius: 8; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-font-size: 12px; -fx-padding: 8;">
        <font>
            <Font size="12" />
        </font>
        <effect>
            <DropShadow color="black" radius="5" spread="0.2" />
        </effect>
    </TextField>

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" layoutX="200" layoutY="225" prefWidth="200" prefHeight="35"
                   promptText="Password"
                   style="-fx-background-radius: 8; -fx-background-color: rgba(255, 255, 255, 0.95); -fx-font-size: 12px; -fx-padding: 8;">
        <font>
            <Font size="12" />
        </font>
        <effect>
            <DropShadow color="black" radius="5" spread="0.2" />
        </effect>
    </PasswordField>

    <!-- Login Button -->
    <Button fx:id="loginBtn" layoutX="200" layoutY="275" prefWidth="200" prefHeight="35"
            text="Login"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 8; -fx-cursor: hand;">
        <font>
            <Font size="12" />
        </font>
        <effect>
            <DropShadow color="black" radius="5" spread="0.2" />
        </effect>
    </Button>

    <!-- Signup Button -->
    <Button fx:id="signupBtn" layoutX="200" layoutY="320" prefWidth="200" prefHeight="35"
            text="Sign Up"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 8; -fx-cursor: hand;">
        <font>
            <Font size="12" />
        </font>
        <effect>
            <DropShadow color="black" radius="5" spread="0.2" />
        </effect>
    </Button>

</AnchorPane>