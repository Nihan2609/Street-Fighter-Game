<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.GameSceneController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="400" preserveRatio="false">
        <image>
            <Image url="@../../../images/fight_bg.jpg" />
        </image>
    </ImageView>

    <!-- Game Canvas -->
    <Canvas fx:id="gameCanvas" height="600" width="800" />

    <!-- UI Overlay -->
    <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

        <!-- Timer and Round Info -->
        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="roundLabel" text="ROUND 1" textFill="WHITE">
                <font>
                    <Font name="Candara Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="timerLabel" text="99" textFill="YELLOW">
                <font>
                    <Font name="Candara Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <!-- Health Bars -->
        <HBox alignment="CENTER" spacing="50">

            <!-- Player 1 Info -->
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="player1NameLabel" text="RYU" textFill="WHITE">
                    <font>
                        <Font name="Candara Bold" size="16.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ProgressBar fx:id="player1HealthBar" prefWidth="200" prefHeight="20"
                                 progress="1.0" style="-fx-accent: #ff4444;" />
                    <Label fx:id="player1HealthLabel" text="100/100" textFill="WHITE">
                        <font>
                            <Font name="Candara Bold" size="12.0" />
                        </font>
                    </Label>
                </HBox>
            </VBox>

            <!-- VS Label -->
            <Label text="VS" textFill="WHITE">
                <font>
                    <Font name="Candara Bold" size="20.0" />
                </font>
            </Label>

            <!-- Player 2 Info -->
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label fx:id="player2NameLabel" text="KEN" textFill="WHITE">
                    <font>
                        <Font name="Candara Bold" size="16.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label fx:id="player2HealthLabel" text="100/100" textFill="WHITE">
                        <font>
                            <Font name="Candara Bold" size="12.0" />
                        </font>
                    </Label>
                    <ProgressBar fx:id="player2HealthBar" prefWidth="200" prefHeight="20"
                                 progress="1.0" style="-fx-accent: #ff4444;" />
                </HBox>
            </VBox>

        </HBox>

    </VBox>

    <!-- Game State Messages -->
    <VBox fx:id="messageBox" alignment="CENTER" spacing="10" visible="false"
          AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0">
        <Label fx:id="gameStateLabel" text="" textFill="YELLOW" textAlignment="CENTER">
            <font>
                <Font name="Candara Bold" size="36.0" />
            </font>
        </Label>
        <Button fx:id="continueButton" text="Continue" visible="false"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
            <font>
                <Font name="Candara Bold" size="14.0" />
            </font>
        </Button>
    </VBox>

    <!-- Pause Menu -->
    <VBox fx:id="pauseMenu" alignment="CENTER" spacing="15" visible="false"
          style="-fx-background-color: rgba(0,0,0,0.8); -fx-background-radius: 10; -fx-padding: 20;"
          AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0">

        <Label text="PAUSED" textFill="WHITE">
            <font>
                <Font name="Candara Bold" size="24.0" />
            </font>
        </Label>

        <Button fx:id="resumeButton" text="Resume" prefWidth="150"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
            <font>
                <Font name="Candara Bold" size="14.0" />
            </font>
        </Button>

        <Button fx:id="mainMenuButton" text="Main Menu" prefWidth="150"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
            <font>
                <Font name="Candara Bold" size="14.0" />
            </font>
        </Button>

    </VBox>

    <!-- Controls Info (can be toggled) -->
    <VBox fx:id="controlsInfo" alignment="BOTTOM_LEFT" spacing="5" visible="false"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Label text="Player 1 Controls:" textFill="WHITE">
            <font>
                <Font name="Candara Bold" size="12.0" />
            </font>
        </Label>
        <Label text="A/D - Move, W - Jump, S - Crouch" textFill="WHITE">
            <font>
                <Font name="Candara" size="10.0" />
            </font>
        </Label>
        <Label text="J - Punch, K - Kick, L - Block" textFill="WHITE">
            <font>
                <Font name="Candara" size="10.0" />
            </font>
        </Label>

        <Label text="Player 2 Controls:" textFill="WHITE">
            <font>
                <Font name="Candara Bold" size="12.0" />
            </font>
        </Label>
        <Label text="←/→ - Move, ↑ - Jump, ↓ - Crouch" textFill="WHITE">
            <font>
                <Font name="Candara" size="10.0" />
            </font>
        </Label>
        <Label text="1 - Punch, 2 - Kick, 3 - Block" textFill="WHITE">
            <font>
                <Font name="Candara" size="10.0" />
            </font>
        </Label>
    </VBox>

</AnchorPane>