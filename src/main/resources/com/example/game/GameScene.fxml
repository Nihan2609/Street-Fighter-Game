<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Client.GameSceneController"
            prefHeight="400.0" prefWidth="800.0">

    <!-- Game Canvas -->
    <Canvas fx:id="gameCanvas" height="400.0" width="800.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <!-- UI Overlay -->
    <VBox alignment="TOP_CENTER" spacing="8"
          AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <!-- Timer and Round -->
        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="roundLabel" text="ROUND 1" textFill="WHITE">
                <font><Font size="16" /></font>
            </Label>
            <Label fx:id="timerLabel" text="99" textFill="YELLOW">
                <font><Font size="20" /></font>
            </Label>
        </HBox>

        <!-- Health Bars -->
        <HBox alignment="CENTER" spacing="40">

            <!-- Player 1 -->
            <VBox alignment="CENTER_LEFT" spacing="3">
                <ImageView fx:id="player1NameImage" fitHeight="25" fitWidth="70" preserveRatio="true" />
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <ProgressBar fx:id="player1HealthBar" prefHeight="18" prefWidth="180" progress="1.0"
                                 style="-fx-accent: #ff4444;" />
                    <Label fx:id="player1HealthLabel" text="100/100" textFill="WHITE">
                        <font><Font size="10" /></font>
                    </Label>
                </HBox>
            </VBox>

            <!-- VS -->
            <Label text="VS" textFill="WHITE">
                <font><Font size="18" /></font>
            </Label>

            <!-- Player 2 -->
            <VBox alignment="CENTER_RIGHT" spacing="3">
                <ImageView fx:id="player2NameImage" fitHeight="25" fitWidth="70" preserveRatio="true" />
                <HBox alignment="CENTER_RIGHT" spacing="8">
                    <Label fx:id="player2HealthLabel" text="100/100" textFill="WHITE">
                        <font><Font size="10" /></font>
                    </Label>
                    <ProgressBar fx:id="player2HealthBar" prefHeight="18" prefWidth="180" progress="1.0"
                                 style="-fx-accent: #ff4444;" />
                </HBox>
            </VBox>

        </HBox>

    </VBox>

    <!-- Game Messages -->
    <VBox fx:id="messageBox" alignment="CENTER" spacing="15" visible="false"
          AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="160.0">
        <Label fx:id="gameStateLabel" text="" textAlignment="CENTER" textFill="YELLOW" wrapText="true">
            <font><Font size="28" /></font>
        </Label>
        <Button fx:id="continueButton" text="Continue" visible="false">
            <font><Font size="12" /></font>
        </Button>
    </VBox>

    <!-- Pause Menu -->
    <VBox fx:id="pauseMenu" alignment="CENTER" spacing="12" visible="false"
          style="-fx-background-color: rgba(0,0,0,0.85); -fx-background-radius: 10; -fx-padding: 25;"
          AnchorPane.leftAnchor="280.0" AnchorPane.rightAnchor="280.0" AnchorPane.topAnchor="130.0">

        <Label text="PAUSED" textFill="WHITE">
            <font><Font size="20" /></font>
        </Label>

        <Label fx:id="pausedByLabel" text="" textFill="YELLOW" visible="false">
            <font><Font size="10" /></font>
        </Label>

        <Button fx:id="resumeButton" prefWidth="140" text="Resume">
            <font><Font size="12" /></font>
        </Button>

        <Button fx:id="mainMenuButton" prefWidth="140" text="Main Menu">
            <font><Font size="12" /></font>
        </Button>

    </VBox>

    <!-- Controls Info -->
    <VBox fx:id="controlsInfo" alignment="BOTTOM_LEFT" spacing="3" visible="false"
          AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0">
        <Label text="P1 Controls:" textFill="WHITE">
            <font><Font size="10" /></font>
        </Label>
        <Label text="A/D Move W Jump S Crouch" textFill="WHITE">
            <font><Font size="8" /></font>
        </Label>
        <Label text="F G Punch H R Kick T Block" textFill="WHITE">
            <font><Font size="8" /></font>
        </Label>
        <Label text="P2 Controls:" textFill="WHITE">
            <font><Font size="10" /></font>
        </Label>
        <Label text="LEFT/RIGHT UP DOWN arrows" textFill="WHITE">
            <font><Font size="8" /></font>
        </Label>
        <Label text="J K Punch L U Kick I Block" textFill="WHITE">
            <font><Font size="8" /></font>
        </Label>
    </VBox>

    <!-- Network Status -->
    <Label fx:id="networkStatusLabel" text="" textFill="LIME" visible="false"
           AnchorPane.topAnchor="3.0" AnchorPane.rightAnchor="10.0">
        <font><Font size="9" /></font>
    </Label>

</AnchorPane>