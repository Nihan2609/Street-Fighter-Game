<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.ColorAdjust?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="Client.NetworkLobbyController"
           prefWidth="600" prefHeight="400">

    <!-- Background -->
    <ImageView fitHeight="400" fitWidth="600" preserveRatio="false">
        <image>
            <Image url="@../../../images/HomeBg.jpg" />
        </image>
        <effect>
            <ColorAdjust brightness="-0.3"/>
        </effect>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(0,0,0,0.85); -fx-background-radius: 15; -fx-padding: 30;">
        <VBox.margin>
            <Insets top="30" right="80" bottom="30" left="80"/>
        </VBox.margin>

        <!-- Title -->
        <Label text="Network Multiplayer" textFill="WHITE">
            <font>
                <Font name="Candara Bold" size="28"/>
            </font>
        </Label>

        <!-- Host Section -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Host a Game" textFill="YELLOW">
                <font>
                    <Font name="Candara Bold" size="18"/>
                </font>
            </Label>

            <Label fx:id="ipLabel" text="Your IP: Loading..." textFill="LIME">
                <font>
                    <Font name="Arial Bold" size="14"/>
                </font>
            </Label>

            <Label text="Share this IP with Player 2" textFill="LIGHTGRAY">
                <font>
                    <Font size="12"/>
                </font>
            </Label>

            <Button fx:id="hostButton" text="Host Game" prefWidth="250" prefHeight="45"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>

        <Separator prefWidth="350">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </Separator>

        <!-- Join Section -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Join a Game" textFill="CYAN">
                <font>
                    <Font name="Candara Bold" size="20"/>
                </font>
            </Label>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Server IP:" textFill="WHITE" prefWidth="80">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="ipField" prefWidth="200" promptText="192.168.x.x or localhost"
                           style="-fx-font-size: 14px; -fx-background-radius: 5;"/>
            </HBox>

            <Button fx:id="joinButton" text="Join Game" prefWidth="250" prefHeight="45"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Status Label -->
        <Label fx:id="statusLabel" text="" textFill="WHITE" wrapText="true" alignment="CENTER" prefWidth="350">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </Label>

        <!-- Back Button -->
        <Button fx:id="backButton" text="Back to Menu" prefWidth="200" prefHeight="35"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-cursor: hand;"/>

    </VBox>

</StackPane>