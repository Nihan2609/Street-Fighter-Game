<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Client.LeaderboardUIController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: #1e1e2e;">

    <!-- Title -->
    <Label text="LEADERBOARD" textFill="#FFD700"
           layoutX="200" layoutY="10"
           AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="200.0">
        <font><Font size="20" /></font>
    </Label>

    <!-- TableView -->
    <TableView fx:id="leaderboardTable"
               layoutY="50" prefWidth="600" prefHeight="310"
               AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0">
        <columns>
            <TableColumn fx:id="usernameCol" text="Username" prefWidth="200">
                <graphic>
                    <Label text="Username" style="-fx-text-fill: white;">
                        <font><Font size="11" /></font>
                    </Label>
                </graphic>
            </TableColumn>
            <TableColumn fx:id="winsCol" text="Wins" prefWidth="100">
                <graphic>
                    <Label text="Wins" style="-fx-text-fill: white;">
                        <font><Font size="11" /></font>
                    </Label>
                </graphic>
            </TableColumn>
            <TableColumn fx:id="lossesCol" text="Losses" prefWidth="100">
                <graphic>
                    <Label text="Losses" style="-fx-text-fill: white;">
                        <font><Font size="11" /></font>
                    </Label>
                </graphic>
            </TableColumn>
            <TableColumn fx:id="winRateCol" text="Win Rate %" prefWidth="200">
                <graphic>
                    <Label text="Win Rate %" style="-fx-text-fill: white;">
                        <font><Font size="11" /></font>
                    </Label>
                </graphic>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button fx:id="backBtn" text="Back"
            layoutX="250" layoutY="365"
            prefWidth="100" prefHeight="30"
            AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="250.0">
        <font><Font size="11" /></font>
    </Button>

</AnchorPane>