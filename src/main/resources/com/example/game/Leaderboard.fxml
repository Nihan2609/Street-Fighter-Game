<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Client.LeaderboardUIController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);">

    <!-- Title Label -->
    <Label text="ðŸ† LEADERBOARD ðŸ†"
           textFill="#FFD700"
           layoutX="150" layoutY="15"
           AnchorPane.topAnchor="15.0"
           AnchorPane.leftAnchor="150.0">
        <font>
            <Font name="Press Start 2P" size="18"/>
        </font>
    </Label>

    <!-- Subtitle -->
    <Label text="Top Players"
           textFill="#CCCCCC"
           layoutX="240" layoutY="45"
           AnchorPane.topAnchor="45.0"
           AnchorPane.leftAnchor="240.0">
        <font>
            <Font name="Press Start 2P" size="10"/>
        </font>
    </Label>

    <!-- TableView with proper spacing -->
    <TableView fx:id="leaderboardTable"
               layoutY="80"
               prefWidth="580"
               prefHeight="310"
               AnchorPane.topAnchor="80.0"
               AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="10.0"
               style="-fx-background-color: rgba(30, 30, 46, 0.9);
                      -fx-background-radius: 10;
                      -fx-border-color: #FFD700;
                      -fx-border-width: 2;
                      -fx-border-radius: 10;">

        <columns>
            <!-- Username Column -->
            <TableColumn fx:id="usernameCol"
                         text="PLAYER"
                         prefWidth="220"
                         style="-fx-alignment: CENTER-LEFT;">
            </TableColumn>

            <!-- Wins Column -->
            <TableColumn fx:id="winsCol"
                         text="WINS"
                         prefWidth="100"
                         style="-fx-alignment: CENTER;">
            </TableColumn>

            <!-- Losses Column -->
            <TableColumn fx:id="lossesCol"
                         text="LOSSES"
                         prefWidth="100"
                         style="-fx-alignment: CENTER;">
            </TableColumn>

            <!-- Win Rate Column -->
            <TableColumn fx:id="winRateCol"
                         text="WIN RATE"
                         prefWidth="140"
                         style="-fx-alignment: CENTER;">
            </TableColumn>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Back Button -->
    <Button fx:id="backBtn"
            text="â—„ BACK"
            layoutX="240"
            layoutY="400"
            prefWidth="120"
            prefHeight="35"
            AnchorPane.bottomAnchor="15.0"
            AnchorPane.leftAnchor="240.0"
            style="-fx-background-color: #e74c3c;
                   -fx-text-fill: white;
                   -fx-background-radius: 10;
                   -fx-font-size: 12px;
                   -fx-cursor: hand;">
        <font>
            <Font name="Press Start 2P" size="11"/>
        </font>
    </Button>

</AnchorPane>